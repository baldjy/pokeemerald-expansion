        releaseall
        end
        }
        else{
        faceplayer
        lockall
        msgbox(format("Now go for the big roads! Don't let'em waiting."))
        releaseall
        end 
        }
    }
	else{
        faceplayer
        lockall
        msgbox(format("Now go for the big roads! Don't let'em waiting."))
        releaseall
        end 
    }
} 

script ChangeBikes {
    lockall
   	msgbox(format("Let's work on my bike"))
	checkitem(ITEM_ACRO_BIKE)
    if(var(VAR_RESULT) == TRUE){
        call(AcroToMach)}
    checkitem(ITEM_MACH_BIKE)
    if(var(VAR_RESULT) == TRUE){
        call(MachToAcro)}
	release
}
script AcroToMach{
    //setvar(GetPlayerAvatarBike, 0)
	removeitem(ITEM_ACRO_BIKE)
    giveitem(ITEM_MACH_BIKE)
    releaseall
	end
}
script MachToAcro{
    //setvar(GetPlayerAvatarBike, 0)
